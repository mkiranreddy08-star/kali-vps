{
  "name": "Kali Linux VPS",
  "image": "kalilinux/kali-rolling",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "apt-get update && apt-get install -y kali-linux-core sudo git curl wget nano",
  "remoteUser": "root",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined"
  ],
  "overrideCommand": false,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python"
      ]
    }
  }
}
